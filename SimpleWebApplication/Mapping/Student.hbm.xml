<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="SimpleWebApplication"
                   namespace="SimpleWebApplication">

  <class name="SimpleWebApplication.Models.Student" table="STUDENTS">
    <id name="RollNo" column="ROLL_NO" type="Int32">
      <generator class="identity" />
    </id>
    <property name="Name" column="NAME" />
    <property name="Subject" column="SUBJECT"/>
    <one-to-one name="Risk" class="SimpleWebApplication.Models.Risk" />

  </class>

  <class name="SimpleWebApplication.Models.Risk" table="Risk">
    <id name="RiskId" type="int">
      <generator class="native" />
    </id>

    <property name="Rating"  type="String"  />
  </class>

</hibernate-mapping>